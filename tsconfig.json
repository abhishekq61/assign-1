{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2015",
      "webworker"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "."
  },
  "include": ["./server/**/*"]
}
